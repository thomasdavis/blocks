<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{basics.name}} - {{basics.label}}</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-color: #2c3e50;
            --secondary-color: #3498db;
            --text-color: #333;
            --light-gray: #ecf0f1;
            --border-color: #bdc3c7;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            line-height: 1.6;
            color: var(--text-color);
            background-color: #f5f5f5;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
            background: white;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }

        header {
            background: var(--primary-color);
            color: white;
            padding: 3rem 2rem;
            text-align: center;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
            font-weight: 700;
        }

        .label {
            font-size: 1.25rem;
            color: var(--light-gray);
            margin-bottom: 1rem;
        }

        .contact-info {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 1.5rem;
            margin-top: 1rem;
            font-size: 0.95rem;
        }

        .contact-info a {
            color: white;
            text-decoration: none;
            transition: opacity 0.2s;
        }

        .contact-info a:hover {
            opacity: 0.8;
        }

        main {
            padding: 2rem;
        }

        section {
            margin-bottom: 2.5rem;
        }

        h2 {
            font-size: 1.75rem;
            color: var(--primary-color);
            border-bottom: 3px solid var(--secondary-color);
            padding-bottom: 0.5rem;
            margin-bottom: 1.5rem;
        }

        h3 {
            font-size: 1.25rem;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        .summary {
            font-size: 1.1rem;
            line-height: 1.8;
            color: #555;
        }

        .job, .education-item {
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--light-gray);
        }

        .job:last-child, .education-item:last-child {
            border-bottom: none;
        }

        .job-header, .edu-header {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            flex-wrap: wrap;
            margin-bottom: 0.75rem;
        }

        .position, .degree {
            font-weight: 600;
            color: var(--primary-color);
        }

        .company, .institution {
            color: var(--secondary-color);
            font-size: 1.1rem;
        }

        .date {
            color: #777;
            font-size: 0.9rem;
        }

        .job-summary, .edu-courses {
            margin: 0.75rem 0;
            color: #555;
        }

        .highlights {
            list-style: none;
            margin-top: 0.75rem;
        }

        .highlights li {
            padding-left: 1.5rem;
            margin-bottom: 0.5rem;
            position: relative;
        }

        .highlights li:before {
            content: "â–¸";
            position: absolute;
            left: 0;
            color: var(--secondary-color);
        }

        .skills-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .skill-category {
            background: var(--light-gray);
            padding: 1.25rem;
            border-radius: 8px;
        }

        .skill-category h3 {
            font-size: 1.1rem;
            margin-bottom: 0.75rem;
        }

        .skill-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .skill-tag {
            background: white;
            padding: 0.4rem 0.8rem;
            border-radius: 4px;
            font-size: 0.9rem;
            border: 1px solid var(--border-color);
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 2rem;
            }

            .contact-info {
                flex-direction: column;
                align-items: center;
                gap: 0.75rem;
            }

            main {
                padding: 1.5rem;
            }

            .job-header, .edu-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .skills-grid {
                grid-template-columns: 1fr;
            }
        }

        @media print {
            body {
                background: white;
            }

            .container {
                box-shadow: none;
            }

            section {
                page-break-inside: avoid;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <header role="banner">
            <h1>{{basics.name}}</h1>
            <div class="label">{{basics.label}}</div>
            <nav class="contact-info" aria-label="Contact information">
                {{#if basics.email}}
                <span><a href="mailto:{{basics.email}}">{{basics.email}}</a></span>
                {{/if}}
                {{#if basics.phone}}
                <span>{{basics.phone}}</span>
                {{/if}}
                {{#if basics.url}}
                <span><a href="{{basics.url}}" target="_blank" rel="noopener">{{basics.url}}</a></span>
                {{/if}}
                {{#if basics.location}}
                <span>{{basics.location.city}}, {{basics.location.region}}</span>
                {{/if}}
            </nav>
        </header>

        <main role="main">
            {{#if basics.summary}}
            <section aria-labelledby="summary-heading">
                <h2 id="summary-heading">Summary</h2>
                <p class="summary">{{basics.summary}}</p>
            </section>
            {{/if}}

            {{#if work}}
            <section aria-labelledby="experience-heading">
                <h2 id="experience-heading">Work Experience</h2>
                {{#each work}}
                <article class="job">
                    <div class="job-header">
                        <div>
                            <h3 class="position">{{this.position}}</h3>
                            <div class="company">{{this.name}}</div>
                        </div>
                        <time class="date">
                            {{this.startDate}}{{#if this.endDate}} - {{this.endDate}}{{else}} - Present{{/if}}
                        </time>
                    </div>
                    {{#if this.summary}}
                    <p class="job-summary">{{this.summary}}</p>
                    {{/if}}
                    {{#if this.highlights}}
                    <ul class="highlights">
                        {{#each this.highlights}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                    {{/if}}
                </article>
                {{/each}}
            </section>
            {{/if}}

            {{#if education}}
            <section aria-labelledby="education-heading">
                <h2 id="education-heading">Education</h2>
                {{#each education}}
                <article class="education-item">
                    <div class="edu-header">
                        <div>
                            <h3 class="degree">{{this.studyType}} in {{this.area}}</h3>
                            <div class="institution">{{this.institution}}</div>
                        </div>
                        <time class="date">{{this.startDate}} - {{this.endDate}}</time>
                    </div>
                    {{#if this.score}}
                    <p class="edu-courses">GPA: {{this.score}}</p>
                    {{/if}}
                </article>
                {{/each}}
            </section>
            {{/if}}

            {{#if skills}}
            <section aria-labelledby="skills-heading">
                <h2 id="skills-heading">Skills</h2>
                <div class="skills-grid">
                    {{#each skills}}
                    <div class="skill-category">
                        <h3>{{this.name}}</h3>
                        <div class="skill-tags">
                            {{#each this.keywords}}
                            <span class="skill-tag">{{this}}</span>
                            {{/each}}
                        </div>
                    </div>
                    {{/each}}
                </div>
            </section>
            {{/if}}
        </main>
    </div>
</body>
</html>
