{
  "name": "blocks",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "docs:dev": "pnpm --filter @blocks/docs dev",
    "docs:build": "pnpm --filter @blocks/docs build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:status": "changeset status",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=./packages/* && changeset publish",
    "publish:manual": "pnpm run build && pnpm run version-packages && pnpm run release"
  },
  "devDependencies": {
    "@blocksai/ai": "^3.0.2",
    "@blocksai/schema": "^1.1.0",
    "@changesets/cli": "^2.27.9",
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "dotenv": "^17.2.3",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "next": "^16.1.1",
    "openai": "^6.15.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "tsx": "^4.21.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vitest": "^2.1.8",
    "zod": "^3.24.1"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
