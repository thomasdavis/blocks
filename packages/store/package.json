{
  "name": "@blocksai/store",
  "version": "0.1.0",
  "description": "Database store for Blocks specifications - SQLite and PostgreSQL support via Drizzle ORM",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@blocksai/schema": "workspace:*",
    "drizzle-orm": "^0.38.0",
    "better-sqlite3": "^11.0.0",
    "yaml": "^2.6.1"
  },
  "peerDependencies": {
    "pg": "^8.0.0",
    "@libsql/client": ">=0.5.0"
  },
  "peerDependenciesMeta": {
    "pg": {
      "optional": true
    },
    "@libsql/client": {
      "optional": true
    }
  },
  "devDependencies": {
    "@blocks/tsconfig": "workspace:*",
    "@types/better-sqlite3": "^7.6.0",
    "@types/pg": "^8.0.0",
    "drizzle-kit": "^0.30.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
