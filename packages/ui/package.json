{
  "name": "@blocksai/ui",
  "version": "0.2.0",
  "description": "Styled UI components for Blocks built on Base UI",
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./dist/styles/index.css",
    "./button": {
      "types": "./dist/button/index.d.ts",
      "import": "./dist/button/index.js"
    },
    "./dialog": {
      "types": "./dist/dialog/index.d.ts",
      "import": "./dist/dialog/index.js"
    },
    "./tabs": {
      "types": "./dist/tabs/index.d.ts",
      "import": "./dist/tabs/index.js"
    },
    "./tooltip": {
      "types": "./dist/tooltip/index.d.ts",
      "import": "./dist/tooltip/index.js"
    },
    "./menu": {
      "types": "./dist/menu/index.d.ts",
      "import": "./dist/menu/index.js"
    },
    "./select": {
      "types": "./dist/select/index.d.ts",
      "import": "./dist/select/index.js"
    },
    "./accordion": {
      "types": "./dist/accordion/index.d.ts",
      "import": "./dist/accordion/index.js"
    },
    "./checkbox": {
      "types": "./dist/checkbox/index.d.ts",
      "import": "./dist/checkbox/index.js"
    },
    "./radio": {
      "types": "./dist/radio/index.d.ts",
      "import": "./dist/radio/index.js"
    },
    "./switch": {
      "types": "./dist/switch/index.d.ts",
      "import": "./dist/switch/index.js"
    },
    "./input": {
      "types": "./dist/input/index.d.ts",
      "import": "./dist/input/index.js"
    },
    "./popover": {
      "types": "./dist/popover/index.d.ts",
      "import": "./dist/popover/index.js"
    },
    "./progress": {
      "types": "./dist/progress/index.d.ts",
      "import": "./dist/progress/index.js"
    },
    "./slider": {
      "types": "./dist/slider/index.d.ts",
      "import": "./dist/slider/index.js"
    },
    "./card": {
      "types": "./dist/card/index.d.ts",
      "import": "./dist/card/index.js"
    },
    "./badge": {
      "types": "./dist/badge/index.d.ts",
      "import": "./dist/badge/index.js"
    },
    "./banner": {
      "types": "./dist/banner/index.d.ts",
      "import": "./dist/banner/index.js"
    },
    "./code-block": {
      "types": "./dist/code-block/index.d.ts",
      "import": "./dist/code-block/index.js"
    },
    "./loading-dots": {
      "types": "./dist/loading-dots/index.d.ts",
      "import": "./dist/loading-dots/index.js"
    },
    "./timeline": {
      "types": "./dist/timeline/index.d.ts",
      "import": "./dist/timeline/index.js"
    },
    "./copy-button": {
      "types": "./dist/copy-button/index.d.ts",
      "import": "./dist/copy-button/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && cp -r src/styles dist/",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0-alpha.8",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.0.1"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@blocks/tsconfig": "workspace:*",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
