{
  "name": "@blocksai/validators",
  "version": "1.2.1",
  "description": "Core validator implementations for Blocks",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@blocksai/schema": "workspace:*",
    "@blocksai/domain": "workspace:*",
    "@blocksai/ai": "workspace:*",
    "minimatch": "^10.0.1",
    "p-limit": "^6.1.0"
  },
  "devDependencies": {
    "@blocks/tsconfig": "workspace:*",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
