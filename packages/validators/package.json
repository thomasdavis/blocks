{
  "name": "@blocks/validators",
  "version": "0.1.0",
  "description": "Core validator implementations for Blocks",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@blocks/schema": "workspace:*",
    "@blocks/domain": "workspace:*",
    "@blocks/ai": "workspace:*"
  },
  "devDependencies": {
    "@blocks/tsconfig": "workspace:*",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
